#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables
export KEYSTORE="/var/vcap/packages/openjdk-17/lib/security/cacerts"
export JOB_NAME=opensearch
export JOB_DIR=/var/vcap/jobs/$JOB_NAME

/var/vcap/packages/openjdk-17/bin/keytool -importcert -keystore ${KEYSTORE} -file ${JOB_DIR}/config/ssl/smtp.ca -storepass changeit -alias smtp-ca -trustcacerts -noprompt
/var/vcap/packages/openjdk-17/bin/keytool -importcert -keystore ${KEYSTORE} -file ${JOB_DIR}/config/ssl/smtp.cert -storepass changeit -trustcacerts -noprompt