processes:
  - name: ingestor_opensearch
    hooks:
      pre_start: /var/vcap/jobs/ingestor_opensearch/bin/pre-start
    executable: /var/vcap/jobs/ingestor_opensearch/bin/ingestor_opensearch.sh
    ephemeral_disk: true
    persistent_disk: true
    additional_volumes:
    - path: /var/vcap/sys/tmp/ingestor_opensearch
      writable: true
      allow_executions: true
    - path: /var/vcap/jobs/ingestor_opensearch/config
      writable: true
    - path: /var/vcap/jobs/deployment_lookup_config/config
