<%
opensearch_host = p("smoke_tests.opensearch_master.host")
opensearch_port = p("smoke_tests.opensearch_master.port")

  system_domain = nil
  if_p('smoke_tests.system_domain') do |prop|
    system_domain = prop
  end.else do
    system_domain = link('cloud_controller').p('system_domain')
  end
%>

{
  "api":                              "api.<%= system_domain %>",
  "apps_domain":                      "<%= p('smoke_tests.apps_domain') != "" && p('smoke_tests.apps_domain') || system_domain %>",
  "admin_user":                       "<%= p('smoke_tests.admin_user') %>",
  "admin_password":                   "<%= p('smoke_tests.admin_password') %>",
  "skip_ssl_validation":              true,
  <% if_p('smoke_tests.test_password') do |v| -%>
  "test_password":                    "<%= v %>",
  <% end -%>
  "system_domain":                    "<%= system_domain %>",
  "elasticsearch_master_ip":          "<%= opensearch_host %>",
  "elasticsearch_master_port":        "<%= opensearch_port %>",
  "elasticsearch_app_index":          "<%= p('smoke_tests.opensearch_manager.app_index') %>"
}
