processes:
  - name: opensearch_config
    hooks:
      pre_start: /var/vcap/jobs/opensearch_config/bin/pre-start
    executable: /var/vcap/jobs/opensearch_config/bin/job.process
    ephemeral_disk: true
    additional_volumes:
    - path: /var/vcap/jobs/opensearch_config_lfc
    - path: /var/vcap/jobs/opensearch/config
      writable: true
